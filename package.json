{
  "name": "polka",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "build:storybook": "storybook build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . --fix",
    "fmt": "prettier --check .",
    "fmt:fix": "prettier --write .",
    "start": "wrangler pages dev ./build/client",
    "storybook": "storybook dev -p 6006",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "preview": "pnpm run build && wrangler pages dev",
    "cf-typegen": "wrangler types",
    "test": "vitest"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.12.1",
    "@remix-run/cloudflare-pages": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "isbot": "^5.1.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.3.5",
    "the-new-css-reset": "^1.11.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241004.0",
    "@remix-run/dev": "^2.12.1",
    "@shiron-dev/eslint-config": "^1.7.0",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vanilla-extract/css": "^1.16.0",
    "@vanilla-extract/vite-plugin": "^4.0.16",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.0.1",
    "wrangler": "3.80.4"
  },
  "engines": {
    "node": ">=20.18.0"
  }
}
